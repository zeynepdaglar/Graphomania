@using EntityLayer.Concrete
@model List<Admin>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Index</h2>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Kullanıcı Mail</th>
        <th>Yetki</th>
        <th>Status</th>
        <th>Pasif Yap</th>
        <th>Yetkisini Değiştir</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <th>@item.AdminId</th>
            <td>@item.AdminUsername</td>
            <td>@item.AdminRole</td>
            <td>Aktif</td>
            <td><a href="/AdminCategory/DeleteCategory/@item.AdminId" class="btn btn-danger">Pasif</a></td>
            <td><a href="/AdminCategory/EditCategory/@item.AdminId" class="btn btn-danger">Yetkisini Değiştir</a></td>
        </tr>
    }
</table>
<a href="Authorization/AddAdmin" class="btn btn-info">Yeni Admin Tanımla</a>